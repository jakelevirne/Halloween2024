{
	"build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
	"remoteUser": "nonroot",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
            "extensions": [
				"ms-python.python",
				"ms-azuretools.vscode-docker"
			]
		}
	},
	// This is only needed when the MQTT broker is running on the host
	"runArgs": [
        "--network=host"
    ]


}
